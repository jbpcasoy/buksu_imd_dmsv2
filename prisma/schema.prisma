    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    q1_1               Rating?
    q1_2               Rating?
    q2_1               Rating?
    q2_2               Rating?
    q2_3               Rating?
    q2_4               Rating?
    q3_1               Rating?
